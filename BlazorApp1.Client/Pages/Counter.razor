@page "/counter"

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>
<FluentButton Appearance="Appearance.Accent" OnClick="IncrementCount">Click aquí</FluentButton>
<FluentButton Appearance="Appearance.Accent" OnClick="IncrementCount">Otro botón más</FluentButton>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }

}
